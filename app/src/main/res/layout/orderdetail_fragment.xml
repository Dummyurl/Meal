<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@mipmap/side_bg">

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:background="#3357c4c7">


        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="@mipmap/squre_circle_red"
            android:gravity="center"
            android:text="删除"
            android:textColor="#fff"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/orderdetail_tablenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:text=""
            android:textSize="24dp" />

        <TextView
            android:id="@+id/centerH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="" />

        <TextView
            android:id="@+id/orderdetail_ordercode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:text="未选择订单" />

        <ListView
            android:id="@+id/meal_list"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="150dp">

        </ListView>

        <TextView
            android:id="@+id/back_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/meal_list"
            android:layout_centerHorizontal="true"
            android:text="" />

        <ListView
            android:id="@+id/backmeal_list"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/back_detail"></ListView>


        <TextView
            android:id="@+id/orderdetail_preprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/backmeal_list"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="1dp"
            android:text="" />

        <TextView
            android:id="@+id/backdetail_backfee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/orderdetail_preprice"
            android:layout_alignLeft="@+id/centerH"
            android:text="" />

        <TextView
            android:id="@+id/orderdetail_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderdetail_preprice"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="1dp"
            android:text="" />

        <TextView
            android:id="@+id/backdetail_turnover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/orderdetail_discount"
            android:layout_alignLeft="@+id/centerH"
            android:text="" />

        <TextView
            android:id="@+id/orderdetail_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderdetail_discount"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="1dp"
            android:text="" />

        <TextView
            android:id="@+id/orderdetail_totalFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderdetail_bonus"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="1dp"
            android:text="" />

        <TextView
            android:id="@+id/orderdetail_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderdetail_totalFee"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="1dp"
            android:text="" />

        <TextView
            android:id="@+id/orderdetail_paystate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderdetail_remark"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="1dp"
            android:text="" />

        <TextView
            android:id="@+id/orderdetail_paytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderdetail_paystate"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="1dp"
            android:text="" />

        <LinearLayout
            android:id="@+id/ll_print"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderdetail_paytime"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_counter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@mipmap/squre_circle_blue"
                android:gravity="center"
                android:text="前台出票"
                android:textColor="#fff"

                android:visibility="invisible" />

            <TextView
                android:id="@+id/btn_print"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@mipmap/squre_circle_blue"
                android:gravity="center"
                android:text="全部出票"
                android:textColor="#fff"
                android:visibility="invisible" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_print"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@mipmap/squre_circle_blue"
                android:gravity="center"
                android:text="结帐单"
                android:textColor="#fff"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/btn_paystyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@mipmap/squre_circle_blue"
                android:gravity="center"
                android:text="选择付款方式"
                android:textColor="#fff"
                android:visibility="invisible" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>

